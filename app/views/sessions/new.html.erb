<!-- Navigation -->  
<nav class="navbar navbar-expand-lg navbar-light  static-top fixed-top login-nav ">
  <div class="">    
    <div class="collapse navbar-collapse " id="navbarResponsive">
      <ul class="navbar-nav ml-auto"> 
        <li class="nav-item">
          <%= link_to "Facebook", root_url ,class: "navbar-brand  text-light brand" %>             
        </li> 
        <li class="nav-item login-form">
          <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
            <%= f.label :Email %>
            <%= f.email_field :email_or_phone %>
            <%= f.label :Password %>
            <%= f.password_field :password %>
            <%= f.submit "Log in" ,class: "btn login-btn text-light text-center ml-2 pb-2" %>
          <% end %>
        </li>           
      </ul>
    </div>
  </div>
